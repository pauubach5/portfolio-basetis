---
import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="About | Pau Ubach" description="About Pau Ubach">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="Thanks for stopping by. Read below to learn more about myself and my background."
			>
				<img
					width="1553"
					height="873"
					src="/assets/pau-ubach (1).jpg"
					alt="Company photo about Pau Ubach with a hobby"
				/>
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						Hello World! I'm Pau, a 23-year-old from Catalonia with a background in physiotherapy, now passionately exploring the world of web development.
					</p>
					<p>
						As a dedicated learner, I've embraced modern web technologies and efficient coding practices to create powerful web applications, focusing on performance and functionality.
					</p>
					<p>
						My ambition is to evolve into a full-stack developer, constantly expanding my skillset through self-learning and practical experience.
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>FullStack Master - Universidad Internacional de la Rioja</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<p>HTML</p>
					<p>CSS</p>
					<p>Saas</p>
				</div>
				<div class="content">
					<p>JavaScript</p>
					<p>React</p>
					<p>Angular</p>
				</div>
				<div class="content">
					<p>MySQL</p>
					<p>MongoDB</p>
					<p>NodeJS</p>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content > p {
		padding: 0 0 1rem 0;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
